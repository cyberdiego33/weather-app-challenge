{
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:ts\"",
    "dev:css": "tailwindcss --watch -i ./src/styles.css -o ./dist/output.css",
    "dev:ts": "tsc --watch",
    "build": "npm run build:css && npm run build:ts",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/output.css --minify",
    "build:ts": "tsc"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  }
}
